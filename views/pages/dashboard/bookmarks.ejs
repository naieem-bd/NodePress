<%- include('../../partials/header.ejs') %> 


<div class="container-fluid my-5">
    <div class="row">
        <div class="col-md-3">
            <%- include('../../partials/sidebar.ejs') %> 
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8">

                    <div class="card">
                        <div class="card-body">
                            <h5>List of my bookmarks</h5>
                            <div class="row">
                                <% if (posts.length === 0) { %>
                                    <div class="text-center text-muted">
                                        <p>You did not bookmarked any post</p>
                                    </div>
                                <% } else { %>
                                    <% for( let post of posts.reverse() ) { %>
                                        <div class="card col-sm-3 m-3">
                                            <% if (post.thumbnail) { %>
                                                <img src="<%= post.thumbnail %> " alt="<%= post.title %> " class="card-img mt-3">
                                            <% } %>
                                            <div class="card-body p-0 mt-2">
                                                <a href="/explorer/<%= post._id %> " style="color: #222;">
                                                    <p><%= post.title %> </p>
                                                </a>
                                            </div>
                                        </div>
                                    <% } %>
                                <% } %>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  

</div>

<%- include('../../partials/footer.ejs') %> 

</body>
</html>