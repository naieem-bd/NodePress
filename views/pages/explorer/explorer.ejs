<%- include('../../partials/header.ejs', {title: 'explorer'}) %> 

<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <section class="mb-5">
                <a 
                    href="/explorer?filter=latest"
                    class="btn <%= filter==='latest' ? 'btn-primary' : 'btn-secondary' %> "
                >Latest</a>
                <a 
                    href="/explorer?filter=week"
                    class="btn <%= filter==='week' ? 'btn-primary' : 'btn-secondary' %> "
                >Week</a>
                <a 
                    href="/explorer?filter=month"
                    class="btn <%= filter==='month' ? 'btn-primary' : 'btn-secondary' %> "
                >Month</a>
                <a 
                    href="/explorer?filter=all"
                    class="btn <%= filter==='all' ? 'btn-primary' : 'btn-secondary' %> "
                >All</a>
            </section>
            <section>
                <% if (posts.length === 0) { %>
                    <p>There is no post</p>
                <% } else { %>
                    <% for( let post of posts ) { %>
                        <div class="card card-body mb-3">
                            <% if (post.thumbnail) { %>
                                <img class="img-fluid mb-2" src="<%= post.thumbnail %> " alt="">
                            <% } %>

                            <a href="/explorer/<%= post._id %> " style="color:#222">
                                <h5><%= post.title %> </h5>
                                <p class="mb-4"><%= truncate(post.body) %></p>
                            </a>
                            <div class="d-flex">
                                <small>
                                    <%= moment(post.createdAt) %>,
                                    Posted By <%= post.author.username %>,
                                    <%= post.readTime %> 
                                </small>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </section>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 

</body>
</html>